<h2>Order history</h2>
<section>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Order number</th>
        <th scope="col">Order status</th>
        <th scope="col">Total</th>
        <th scope="col">Updated at</th>
        <th scope="col">Payment receipt</th>
      </tr>
    </thead>
    <tbody>
      <%@orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= format_text(order.order_status) %></td>
          <td><%= format_price(order.total) %></td>
          <td><%= order.updated_at %></td>
          <% if order.payment %>
            <td><%= link_to "View receipt", order.payment.receipt_url, class: "link-success" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

