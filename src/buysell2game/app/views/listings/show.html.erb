<section class="container d-flex flex-column flex-md-row justify-content-around px-2 my-2 my-md-5">
  <div class="content col-12 col-md-7 col-lg-8 p-0 pr-md-1 d-flex justify-content-center">
    <div class="col-6 p-0 main-preview mb-4">
        <%if !@listing.picture.attached?%>
            <%=image_tag "hero-image.jpg", alt: "dungeon and dragon board game", class:""%>

        <%else%>
            <%=image_tag @listing.picture, alt: @listing.listing_name, class:"card-img top"%>

        <%end%>
    </div>
  </div>
  <div class="d-flex sidebar col-lg-4 p-0 mx-2 d-md-block"> 
    <h1 class="mb-sm-2 mb-md-5"><%=@listing.listing_name%></h1>
    <h3 class=" d-flex text-muted">Price: <%=format_price(@listing.price)%></h3>
    <h5 class="text-muted">Description:</h5>
    <p><%=@listing.description%></p>
    <h5 class="d-flex text-muted">Condition: <%=format_text(@listing.condition)%></h5>
    <h5 class="d-flex text-muted">Shipping method: <%=format_text(@listing.shipping)%></h5>
   
    <%if current_user && current_user.id == @listing.user_id%>
        <h5>Listing status: 
        <span><strong><%=@listing.listing_status.capitalize%></strong></span></h5>
        <div class="d-flex flex-wrap justify-content-start mb-md-3">
            <%= link_to "Edit", edit_listing_path(@listing.id), class: "btn btn-primary mx-2" %>
            <a href="#" class="btn btn-primary">Attach shipping receipt</a>
        </div>
        <%= link_to "Delete", @listing, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger m-3" %>  
    <%else%>

      <%= button_to "Add to cart", { :controller => "orders", :action => "create" }, { :method => :post, :params => { :listing_id => @listing.id}, class: "btn btn-primary"}%>

    <%end%>


    



  </div>
 

</section>























